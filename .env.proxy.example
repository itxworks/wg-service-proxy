# Client Mode - Access remote services AND expose to public
CLIENT_MODE=proxy

# WireGuard Configuration
WG_INTERFACE_NAME=wg0
WG_PRIVATE_KEY=proxy_client_private_key_base64_here
WG_PUBLIC_KEY=proxy_client_public_key_base64_here
WG_ADDRESS=10.7.0.3/32
WG_DNS=WG_DNS_SERVER
WG_MTU=1420
WG_ENDPOINT=WG_SERVER_ENDPOINT_IP:51820
WG_PEER_PUBLIC_KEY=xv0p7FLk/NVeTBSTj9j3qk8bgunpfyn0weLKi/y8iUM=
WG_PRESHARED_KEY=tXp34vhWoixBVi0l1opf4aeWjKzWkpWQ45OwDz8mtmk=
WG_ALLOWED_IPS=10.7.0.0/24
WG_PERSISTENT_KEEPALIVE=25

# Service Access - Connect to services shared by other WireGuard clients
ACCESS_SERVICES=10.7.0.2:80,10.7.0.2:443

# Public Exposure - Map public ports to WireGuard services
WG_PUBLIC_PORTS=80:10.7.0.2:80,443:10.7.0.2:443

# Public exposure settings - will auto-detect public-network interface
WG_ENABLE_PUBLIC_FORWARDING=true
WG_PUBLIC_NETWORK=public-network

# Optional: Public access controls
WG_PUBLIC_ALLOWED_CIDR=0.0.0.0/0
WG_LOG_PUBLIC_ACCESS=true

# Server Configuration
SERVER_PORT=8080
AUTO_CONNECT=true
CONFIG_PATH=/etc/wireguard
ENV_FILE_PATH=.env.proxy

# Firewall rules
WG_ALLOWED_TCP_PORTS=80,443,8080,8081,22
WG_ALLOWED_UDP_PORTS=51820
WG_ALLOW_ICMP=true